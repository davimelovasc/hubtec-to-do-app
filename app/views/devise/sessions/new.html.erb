<div class="container mt-5">
  <div class="row">  
    <div class="col-12 col-md-8 col-lg-6 col-xl-4 mx-auto">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: { class: "loginForm" } ) do |f| %>
          <h2 class="title">Gerenciador de Tarefas</h2>

          <div class="field">
            <%= f.label :email, "E-mail: " %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <%= f.label :password, "Senha: " %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="actions mb-2">
            <%= f.submit "Entrar", class: "btn btn-primary d-flex mx-auto" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
