<div class="container mt-5">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5 mx-auto">
      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url:
          registration_path(resource_name), html: { class: "loginForm" }) do |f|
          %>
          <h2 class="title">Cadastre-se</h2>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field form-group">
            <%= f.label :email, "E-mail: " %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password, "Senha: " %> <% if
            @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:
            "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o de senha:" %><br />
            <%= f.password_field :password_confirmation, autocomplete:
            "new-password", class: "form-control" %>
          </div>

          <div class="actions mb-2">
            <%= f.submit "Cadastrar", class: "btn btn-primary d-flex mx-auto" %>
          </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
