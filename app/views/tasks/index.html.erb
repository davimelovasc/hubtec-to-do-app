<% if notice != nil && notice != '' %>
  <div class="alert alert-success alert-dismissible fade show w-25 ml-2 mt-2" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<%end%>

<h1 class="ml-3">Minhas tarefas</h1>
<div class="fluid-container mt-5 px-3">
  <div class="row mt-3">
    <div class="col-12 col-md-6">
      <h3>A fazer</h3>

      <% @tasks[:to_do].each do |task| %>

      <div class="card task-card">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= task.deadline.strftime("%d/%m/%Y") %></h6>
          <p class="card-text">
            <%= task.description %>
          </p>
          <a href="#" class="card-link edit-task" onclick="editTask(<%=task.id%>)">
            Editar</a>
          <a href="#" class="card-link update-task" onclick="updateTaskStatus(<%=task.id%>, 'done')">Marcar como feita</a>
        </div>
      </div>

      <% end %>

    </div>
    <div class="col-12 col-md-6">
      <h3>Feitas</h3>
      <% @tasks[:done].each do |task| %>

      <div class="card task-card">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= task.deadline.strftime("%d/%m/%Y") %></h6>
          <p class="card-text">
            <%= task.description %>
          </p>
          <a href="#" class="card-link edit-task" onclick="editTask(<%=task.id%>)">
            Editar</a>
          <a href="#" class="card-link update-task" onclick="updateTaskStatus(<%=task.id%>, 'to_do')">Marcar como a fazer</a>
        </div>
      </div>
      
      
      <% end %>
    </div>
  </div>
</div>

<br />

<%= link_to 'New Task', "#", id: "new_task_bt" %>

<!-- Modal -->
<div
  class="modal fade"
  id="task_modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nova Tarefa</h5>
        <button  type="button" class="close" data-dismiss="modal" 
          aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="form_body" class="modal-body"></div>
    </div>
  </div>
</div>

