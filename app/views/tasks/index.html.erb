<p id="notice"><%= notice %></p>

<h1 class="ml-3">Minhas tarefas</h1>
<div class="fluid-container mt-5 px-3">
  <div class="row mt-3">
    <div class="col-12 col-md-6">
      <h3>A fazer</h3>
<% @tasks[:to_do].each do |task| %>
      <div class="card task-card">
        <div class="card-body">
          <h5 class="card-title"><%= task.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">01/01/2019</h6>
          <p class="card-text">
            <%= task.description %>
          </p>
          <a href="#" class="card-link edit-task" onclick="editTask(1)">
            Editar
          </a>
          <a href="#" class="card-link">Marcar como feita</a>
        </div>
      </div>

      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <h3>Feitas</h3>
      <% @tasks[:done].each do |task| %> <% end %>
    </div>
  </div>
</div>

<br />

<%= link_to 'New Task', "#", id: "new_task_bt" %>

<!-- Modal -->
<div
  class="modal fade"
  id="task_modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nova Tarefa</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="form_body" class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script>
  $("document").ready(function() {
    $("#new_task_bt").click(function(ev) {
      //acionar o modal
      $("#form_body").html("<%= render 'tasks/form_new_task' %>");
      $("#task_modal").modal("show");
      ev.preventDefault();
    });
  });

  function editTask(task_id) {
    alert(task_id);

    $.ajax({
      url: `/tasks/${task_id}/edit`,
      header: { authenticity_token: $('[name="csrf-token"]')[0].content },
      method: "GET",
      success: function(res) {
        console.log("prestou");
      }
    });
  }
</script>
